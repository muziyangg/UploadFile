{
  "version": 2,
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "dist/*.*",
      "use": "@vercel/static" 
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/([^.]+\\.html)$",
      "dest": "/dist/$1" 
    },
    {
      "src": "^(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|woff2|woff|ttf|eot|json))$",
      "dest": "/dist$1"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/index.html"
    }
  ]
}